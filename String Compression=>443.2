<?php
class Solution {
    /**
     * @param String[] $chars
     * @return Integer
     */
    function compress(&$chars) {
        $write = 0;
        $read = 0;
        $n = count($chars);
        while ($read < $n) {
            $char = $chars[$read]; 
            $count = 0;
            while ($read < $n && $chars[$read] === $char) {
                $read++;
                $count++;
            }
            $chars[$write] = $char;
            $write++;
            if ($count > 1) {
                $countDigits = str_split((string)$count);
                foreach ($countDigits as $digit) {
                    $chars[$write] = $digit; 
                    $write++;
                }
            }
        }
        return $write;
    }
}

